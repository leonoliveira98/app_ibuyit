<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:padding="25dp"
        android:background="#D3D3D3">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/splashscreen_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50sp"
            />


        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:hint="Nome"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/ic_email"
            android:textSize="20dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/editext"
            android:drawableTint="@android:color/darker_gray"
            android:layout_below="@id/logo"
            android:drawableLeft="@drawable/ic_email" />

        <EditText
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/ic_email"
            android:textSize="20dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/editext"
            android:drawableTint="@android:color/darker_gray"
            android:layout_below="@id/nome"
            android:drawableLeft="@drawable/ic_email" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/email2"
            android:inputType="textPassword"
            android:hint="Password"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/ic_lock"
            android:textSize="20dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/editext"
            android:drawableTint="@android:color/darker_gray"
            android:drawableLeft="@drawable/ic_lock" />

        <EditText
            android:id="@+id/conf_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password2"
            android:inputType="textPassword"
            android:hint="Password"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/ic_lock"
            android:textSize="20dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/editext"
            android:drawableTint="@android:color/darker_gray"
            android:drawableLeft="@drawable/ic_lock" />

        <TextView
            android:id="@+id/erros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conf_password"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/registo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Registo"
            android:layout_below="@id/erros"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registo"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="18dp"
            android:text="Já tem conta? Faça login aqui."
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:clickable="true"
            />




    </RelativeLayout>
</ScrollView>